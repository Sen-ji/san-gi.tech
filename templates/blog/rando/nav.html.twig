<NavBlog>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Sangi</a>
        <button id="buttonNav" class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation" >
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                {% for cat in categories %}
                    <li class="nav-item">
                        {% if cat.type==1 %}
                            {% if cat.enfants|length !=0%}
                                <li class="nav-item dropdown">

                                    <div class="nav-link ">
                                    <a class="text-decoration-none text-secondary" href="#" id="navbarDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        {{ cat.name }}
                                    </a>
                                    <a type="button" class="dropdown-toggle dropdown-toggle-split text-secondary" id="navbarDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <span class="sr-only"></span>
                                    </a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            {% for fils in cat.enfants%}
                                                <li><a class="dropdown-item"  href="#">{{ fils.name }}</a></li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </li>



                            {% else %}
                                <a class="nav-link" href="#">{{ cat.name }}</a>
                            {% endif %}
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
            <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"/>
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>
</NavBlog>



